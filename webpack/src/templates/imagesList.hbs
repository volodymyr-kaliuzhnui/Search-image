{{#each this.hits}}
  <li>
    <div class="photo-card">
      <a href="{{this.largeImageURL}}" data-fancybox data-caption="Caption for single image">
        <img src="{{this.previewURL}}" alt="{{this.tags}}" />
      </a>
      <div class="stats">
        <p class="stats-item">
          <i class="material-icons">thumb_up</i>
          {{this.likes}}
        </p>
        <p class="stats-item">
          <i class="material-icons">visibility</i>
          {{this.views}}
        </p>
        <p class="stats-item">
          <i class="material-icons">comment</i>
          {{this.comments}}
        </p>
        <p class="stats-item">
          <i class="material-icons">cloud_download</i>
          {{this.downloads}}
        </p>
      </div>
    </div>
  </li>
{{/each}}
